# AI API KEYS
GEMINI_API_KEY=your_gemini_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# GOOGLE OAuth (for Sign in with Google)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# SECURITY KEYS
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_jwt_secret_key_here_min_32_chars
SESSION_SECRET=your_session_secret_here_min_32_chars

# DATABASE (Supabase PostgreSQL recommended for production)
# SQLite (local/testing only):
# DATABASE_URL=sqlite:///empathetic_ai.db

# Supabase PostgreSQL (for production):
# Go to supabase.com -> Project -> Settings -> Database -> Connection String (URI)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-ID].supabase.co:5432/postgres

# REDIS (Upstash recommended for production)
# Local: redis://localhost:6379
# Upstash: rediss://default:[PASSWORD]@[HOST].upstash.io:6379
REDIS_URL=redis://localhost:6379

# URLS
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
